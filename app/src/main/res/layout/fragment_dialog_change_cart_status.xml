<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listener"
            type="com.e15cn2.restaurantorder.screen.main.admin.cart.dialog_status.CartStatusDialogFragment" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <Button
            android:id="@+id/button_in_progress"
            android:layout_width="@dimen/dp_176"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_button_landing"
            android:minHeight="0dp"
            android:onClick="@{()->listener.onInProgress()}"
            android:padding="@dimen/dp_8"
            android:text="In Progress"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/button_distributed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_distributed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_button_landing"
            android:minHeight="0dp"
            android:onClick="@{()->listener.onDistributed()}"
            android:padding="@dimen/dp_8"
            android:text="Distributed"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/button_paid"
            app:layout_constraintEnd_toEndOf="@+id/button_in_progress"
            app:layout_constraintStart_toStartOf="@+id/button_in_progress"
            app:layout_constraintTop_toBottomOf="@+id/button_in_progress" />

        <Button
            android:id="@+id/button_paid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_button_landing"
            android:minHeight="0dp"
            android:onClick="@{()->listener.onPaid()}"
            android:padding="@dimen/dp_8"
            android:text="Paid"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/button_canceled"
            app:layout_constraintEnd_toEndOf="@+id/button_distributed"
            app:layout_constraintStart_toStartOf="@+id/button_in_progress"
            app:layout_constraintTop_toBottomOf="@+id/button_distributed" />

        <Button
            android:id="@+id/button_canceled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_button_landing"
            android:minHeight="0dp"
            android:onClick="@{()->listener.onCanceled()}"
            android:padding="@dimen/dp_8"
            android:text="Canceled"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/button_paid"
            app:layout_constraintStart_toStartOf="@+id/button_in_progress"
            app:layout_constraintTop_toBottomOf="@+id/button_paid" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_button_landing"
            android:minHeight="0dp"
            android:onClick="@{()->listener.onDelete()}"
            android:padding="@dimen/dp_8"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button_in_progress"
            app:layout_constraintStart_toStartOf="@+id/button_in_progress"
            app:layout_constraintTop_toBottomOf="@+id/button_canceled" />
    </android.support.constraint.ConstraintLayout>
</layout>