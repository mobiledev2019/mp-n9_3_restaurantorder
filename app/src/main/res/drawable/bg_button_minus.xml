<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/dp_2" android:color="@color/color_orange_800" />
            <corners android:bottomLeftRadius="@dimen/dp_4" android:topLeftRadius="@dimen/dp_4" />
            <padding android:bottom="@dimen/dp_4" android:left="@dimen/dp_16" android:right="@dimen/dp_16" android:top="@dimen/dp_4" />
            <solid android:color="@color/color_orange_800" />

        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="@dimen/dp_2" android:color="@android:color/black" />
            <corners android:bottomLeftRadius="@dimen/dp_4" android:topLeftRadius="@dimen/dp_4" />
            <padding android:bottom="@dimen/dp_4" android:left="@dimen/dp_16" android:right="@dimen/dp_16" android:top="@dimen/dp_4" />
        </shape>
    </item>
</selector>